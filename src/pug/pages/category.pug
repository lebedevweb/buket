doctype html
html(lang="ru")
  include ../common/head
  body
    include ../components/navbar
    include ../components/sidenav
    div(class="wrapper")
      header(class="header")
        div(class="container")
          include ../components/header/header-top
          include ../components/header/header-navigation
          include ../components/bradcrumbs

      div(class="wrapper__content")
        section(class="maingoods__container")
          div(class="container")
            include ../components/maingoods-simple

        section(class="category")
          div(class="container")
            header(class="category__header")
              h1(class="category__title") Мужские букеты
              ul(class="category__list")
                li
                  a(href="#0") Букеты из раков
                li
                  a(href="#0") Букеты из колбасы
                li
                  a(href="#0") Букеты из с рыбой
                li
                  a(href="#0") Мясные букеты
              div(id="filter") Вывести фильтр на товары по ценам
                div(class="widget woocommerce widget_price_filter wrapper__content")
                  h2(class="widgettitle") Фильтровать по цене
                  form(method="get", action="https://bestbouqet.ru/product-category/for-women/")
                    div(class="price_slider_wrapper")
                      div(class="price_slider ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content")
                        div(class="ui-slider-range ui-corner-all ui-widget-header", style="left: 0%; width: 100%;")
                        span(tabindex="0", class="ui-slider-handle ui-corner-all ui-state-default", style="left: 0%;")
                        span(tabindex="0", class="ui-slider-handle ui-corner-all ui-state-default", style="left: 100%;")
                      div(class="price_slider_amount", data-step="10")
                        input(type="text", id="min_price", name="min_price", value="2950", data-min="2950", placeholder="Минимальная цена", style="display: none;")
                        input(type="text", id="max_price", name="max_price", value="15660", data-max="15660", placeholder="Максимальная цена", style="display: none;")
                        button(type="submit", class="button") Фильтровать
                        div(class="price_label")
                          | Цена:
                          span(class="from") 2 950&amp;nbsp;₽
                          | —
                          span(class="to") 15 660&amp;nbsp;₽
                        div(class="clear")


            include ../components/allgoods-category
      include ../components/special



      include ../components/footer
    include ../components/scrolltop
    include ../components/popup

    script(src="./js/main.js" async)

